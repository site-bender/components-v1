---
import type { HTMLAttributes } from "astro/types";
import type { Dataset } from "../types";
import createClassList from "../utilities/createClassList";
import mapDataset from "../utilities/mapDataset";
import "./index.css";

export type Props = HTMLAttributes<"header"> & {
	dataset?: Dataset | undefined;
};

const { ["class:list"]: classList = [], dataset, ...attrs } = Astro.props;
const data = mapDataset(dataset);
---

<header
	class:list={createClassList("sb-header", classList)}
	{...data}
	{...attrs}
>
	<slot />
</header>
