---
import generateShortId from "../../../../utilities/generateShortId"
import mapAttributes from "../../../../utilities/mapAttributes"
import type { MonthInput as Props } from "../../../../types/form"
import type { HTMLAttributes } from "../../../../types/html"

const {
	autocomplete,
	field = "month-input",
	form,
	id = generateShortId(),
	name,
	wrapper = {},
	...attrs
} = Astro.props

const inputAttrs = mapAttributes(attrs as HTMLAttributes, ["sb-month-input"])
const wrapperAttrs = mapAttributes(wrapper, ["sb-month-input-wrapper"])
---

<span {...wrapperAttrs}>
	<input
		{...inputAttrs}
		{autocomplete}
		{form}
		{id}
		{name}
		type="month"
	/>
</span>
