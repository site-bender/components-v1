---
import FieldWrapper from "../FieldWrapper/index.astro"
import PasswordInput from "../elements/PasswordInput/index.astro"
import generateShortId from "../../../utilities/generateShortId"
import mapAttributes from "../../../utilities/mapAttributes"
import type { PasswordField as Props } from "../../../types/form"

const {
  allowAutocomplete,
  allowUnmasked,
  field = "password-field",
  form,
  help = {},
  id = generateShortId(),
  inputmode = "text",
  isNewPassword,
  label = "Password",
  legend = {},
  message,
  name,
  outer = {},
  required,
  tag = {},
  value,
  wrapper = {},
  ...attrs
} = Astro.props

const pwAttrs = mapAttributes(attrs, [])

const autocomplete = allowAutocomplete
  ? isNewPassword
    ? "new-password"
    : "current-password"
  : "off"
---

<FieldWrapper
  {field}
  {help}
  {id}
  {label}
  {legend}
  {message}
  {outer}
  {required}
  {tag}
>
  {
    (labelledBy: string) => {
      return (
        <PasswordInput
          {...pwAttrs}
          {allowUnmasked}
          {autocomplete}
          {field}
          {form}
          {id}
          {inputmode}
          {labelledBy}
          {required}
          {name}
          {value}
          {wrapper}
        />
      )
    }
  }
</FieldWrapper>
