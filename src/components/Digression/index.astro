---
import "./index.css"
import generateShortId from "../../utilities/generateShortId"
import mapAttribtues from "../../utilities/mapAttributes"
import type { MessengerProps as Props } from "../../types"

const {
	as = "aside",
	header,
	hideClass = "sb-off-screen",
	id = generateShortId(),
	level = 2,
	title: ttl = "Digression",
	...attrs
} = Astro.props

const labelId = `${id}_label`

const headerAttrs = mapAttribtues(header, ["sb-digression-heading", hideClass])
const wrapperAttrs = mapAttribtues(attrs, ["sb-digression"])

const HElement = `h${level}`
const Element = as
const title = (await Astro.slots.render("title")) || ttl
---

<Element {...wrapperAttrs} aria-labelledby={labelId} {id}>
	<HElement {...headerAttrs} id={labelId}>
		{title}
	</HElement>
	<slot />
</Element>
