---
import type { HiddenInput as Props } from "../../../../types/form"
import generateShortId from "../../../../utilities/generateShortId"
import mapDataset from "../../../../utilities/mapDataset"

const {
	["class:list"]: _elementClassList,
	dataset = {},
	field = "hidden-input",
	form,
	id = generateShortId(),
	name,
	type: _type,
	value,
	...attrs
} = Astro.props
---

<input
	{...attrs}
	{...mapDataset(dataset)}
	{form}
	{id}
	{name}
	type="hidden"
	{value}
/>
