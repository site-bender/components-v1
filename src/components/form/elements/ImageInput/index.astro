---
// This will stupidly submit the form and can only be overridden with JS. Ugh.
// Consider using the Button component and passing an image
// unless the x and y coordinates are needed (probably not accessible)
import generateShortId from "../../../../utilities/generateShortId"
import mapAttributes from "../../../../utilities/mapAttributes"
import type { ImageInput as Props } from "../../../../types/form"
import type { HTMLAttributes } from "../../../../types/html"

const {
	alt,
	field = "image-input",
	form,
	height,
	id = generateShortId(),
	labelledBy,
	name,
	src,
	width,
	...attrs
} = Astro.props

const inputAttrs = mapAttributes(attrs as HTMLAttributes, ["sb-image-input"])
---

<input
	{...inputAttrs}
	{alt}
	aria-labelledby={labelledBy}
	{form}
	{height}
	{id}
	{name}
	{src}
	type="image"
	{width}
/>
