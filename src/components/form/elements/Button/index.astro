---
import "./index.css"
import generateShortId from "../../../../utilities/generateShortId"
import mapAttributes from "../../../../utilities/mapAttributes"
import type { ButtonProps as Props } from "../../../../types/form"

const {
	id = generateShortId(),
	label = "Activate",
	type = "button",
	...attrs
} = Astro.props

const elemAttrs = mapAttributes(attrs, ["sb-button", `sb-button-${type}`])

const lbl = (await Astro.slots.render("default")) || label
---

<button {...elemAttrs} {id} {type}>
	{lbl}
</button>
