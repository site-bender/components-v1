---
import "./index.css"
import type { SubtitleProps as Props } from "../../types"
import mapAttributes from "../../utilities/mapAttributes"

const { as = "div", subtitle, ...attrs } = Astro.props

const subtitleAttrs = mapAttributes(attrs, ["sb-post-subtitle"])

const Element = as

const sub = (await Astro.slots.render("default")) || subtitle
---

{
	sub ? (
		<Element
			{...subtitleAttrs}
			set:html={sub}
		/>
	) : null
}
