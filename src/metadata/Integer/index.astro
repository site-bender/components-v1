---
import type { NumberProps as Props } from "../../types";
import Number from "../Number/index.astro";

const {
	type: _type,
	value,
	...attrs
} = Astro.props;

const val = Math.round(
  typeof value === "number" ? value : parseInt(String(value), 10)
);
---

<Number {...attrs} type="Integer" value={val} />
