---
import Microdata from "../Microdata/index.astro"
import generateShortId from "../utilities/generateShortId"
import mapAttributes from "../utilities/mapAttributes"
import type { FigureProps as Props } from "../types"
import "./index.css"

const {
	caption: cap,
	figcaption = {},
	id = generateShortId(),
	index,
	isIndexed,
	properties,
	...attrs
} = Astro.props

const figcaptionAttrs = mapAttributes(figcaption, ["sb-figure-figcaption"])
const wrapperAttrs = mapAttributes(attrs, ["sb-figure"])

const indexed = isIndexed ? { class: "indexed" } : {}
const caption = (await Astro.slots.render("caption")) || cap

const useMicrodata = Boolean(import.meta.env.USE_MICRODATA)
---

{
	useMicrodata ? (
			<Microdata
				{...wrapperAttrs}
				as="figure"
				data-sb-figure
				{id}
				{...indexed}
				{properties}
			>
				{
					caption && (
						<figcaption
							{...figcaptionAttrs}
							data-sb-figure="figcaption"
						>
							{index ? `Figure ${index}: ` : ""}
							<Fragment set:html={caption} />
						</figcaption>
					)
				}
				<slot />
			</Microdata>
		) : (
			<figure
				{...wrapperAttrs}
				data-sb-figure
				{id}
				{...indexed}
			>
				{
					caption && (
						<figcaption
							{...figcaptionAttrs}
							data-sb-figure="figcaption"
						>
							{index ? `Figure ${index}: ` : ""}
							<Fragment set:html={caption} />
						</figcaption>
					)
				}
				<slot />
			</figure>
	)
}
