---
import generateShortId from "../../../utilities/generateShortId"
import mapAttributes from "../../../utilities/mapAttributes"
import type { DateInput as Props } from "../../../types/form"
import type { HTMLAttributes } from "../../../types/html"

const {
	autocomplete,
	field = "date-input",
	form,
	id = generateShortId(),
	labelledBy,
	name,
	required,
	value,
	wrapper = {},
	...attrs
} = Astro.props

const inputAttrs = mapAttributes(attrs as HTMLAttributes, ["sb-date-input"])
const wrapperAttrs = mapAttributes(wrapper, ["sb-date-input-wrapper"])
---

<span {...wrapperAttrs} data-sb-wrapper={field}>
	<input
		{...inputAttrs}
		aria-labelledby={labelledBy}
		{autocomplete}
		data-sb-input={field}
		{form}
		{id}
		{name}
		{required}
		type="date"
		{value}
	/>
</span>
