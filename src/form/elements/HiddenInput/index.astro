---
import type { HiddenInput as Props } from "../../../types/form"
import generateShortId from "../../../utilities/generateShortId"
import mapAttributes from "../../../utilities/mapAttributes"
import mapDataset from "../../../utilities/mapDataset"

const {
	["class:list"]: _elementClassList,
	dataset: elementDataset = {},
	field = "hidden-input",
	form,
	id = generateShortId(),
	name,
	type: _type,
	value,
	...attrs
} = Astro.props
---

<input
	{...attrs}
	{...mapDataset(elementDataset)}
	data-sb-input={field}
	{form}
	{id}
	{name}
	type="hidden"
	{value}
/>
