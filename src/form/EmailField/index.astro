---
import EmailInput from "../elements/EmailInput/index.astro"
import FieldWrapper from "../FieldWrapper/index.astro"
import generateShortId from "../../utilities/generateShortId"
import type { EmailField as Props } from "../../types/form"

const {
	autocorrect: _autocorrect,
	datalist = {},
	field = "email-field",
	form,
	help,
	id = generateShortId(),
	label = "Email address",
	legend,
	message,
	list,
	name,
	outer,
	placeholder: _placeholder,
	required,
	tag,
	value,
	wrapper = {},
} = Astro.props
---

<FieldWrapper
	{field}
	{help}
	{id}
	{label}
	{legend}
	{message}
	{outer}
	{required}
	{tag}
>
	{
		(labelledBy: string) => {
			return (
				<EmailInput
					{datalist}
					{field}
					{form}
					{id}
					{labelledBy}
					{list}
					{name}
					{required}
					{value}
					{wrapper}
				/>
			)
		}
	}
</FieldWrapper>
