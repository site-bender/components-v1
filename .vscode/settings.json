{
	"files.exclude": {
		".vscode": true,
		"node_modules": true,
		"astro.config.mjs": true,
		"pnpm-lock.yaml": true,
		"tsconfig.json": true,
		".depcheckrc": true,
		".gitignore": true,
		".npmcheckrc": true,
		"example/node_modules": true,
		"example/.vscode": true,
		"example/.depcheckrc": true,
		"example/.editorconfig": true,
		"example/.gitignore": true,
		"example/.npmcheckrc": true,
		"example/components.theme.dark.json": true,
		"example/astro.config.mjs": true,
		"example/pnpm-lock.yaml": true,
		"example/tsconfig.json": true,
		".eslintignore": true,
		".eslintrc.cjs": true,
		"README.md": true
	},
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.tabSize": 2,
	"terminal.integrated.tabStopWidth": 4,
	"editor.insertSpaces": false,
	"typescript.extension.sortImports.omitSemicolon": true,
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	}
}
